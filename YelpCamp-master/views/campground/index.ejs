<%- include("../partials/header")%>
<div class="container">
	<header class="jumbotron">
	<div class="container">
		<h1><span class="glyphicon glyphicon-tent"></span>
		Welcome to YelpCamp!!
	</h1>
		<p>
			Look at our world famous Campgrounds ,brought to u with so much efforts.
		</p>
		<p>
			<a class="bt btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
		</p>
	</div>
	</header>
	
	<div class="row text-center" style="display:flex ; flex-wrap:wrap;">
		 <div class="col-md-12">
             <% if(noMatch !== null) { %>
             <h3><%= noMatch %></h3>
             <% } %>
         </div>
		<% campgrounds.forEach(function(CG){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img  src="<%= CG.image %>">	
					<div class="caption">
						<h4>
							<%= CG.title %>
						</h4>
					<% if (CG.rating === 0) { %>
                    <em>No reviews yet.</em>
                    <% } else { %>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star <% if (CG.rating > 1.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (CG.rating > 2.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (CG.rating > 3.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (CG.rating > 4.5) { %> checked <% } %>"></span>
                    <% } %>
					</div>
					<p>
						<a href="/campgrounds/<%= CG._id%>" class="btn btn-primary">More info</a>
					</p>
				</div>
			</div>
			
		<% }); %>
	</div>




</div>

<%- include("../partials/footer")%>